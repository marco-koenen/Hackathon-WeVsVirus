{

  //
  // notifications
  // --------------------------------------------------

  "git.ignoreMissingGitWarning": false,
  "explorer.confirmDragAndDrop": false,


  //
  // editor and coding style
  // --------------------------------------------------

  "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.fontWeight": "normal",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrap": "off",
  "editor.cursorStyle": "line",
  "editor.scrollBeyondLastLine": false,
  "editor.formatOnPaste": true,
  "editor.mouseWheelZoom": false,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.roundedSelection": true,
  "editor.renderIndentGuides": false,
  "editor.trimAutoWhitespace": true,
  "explorer.openEditors.visible": 0,
  "files.trimTrailingWhitespace": true,
  "editor.minimap.enabled": false,
  "guides.active.color.dark": "rgba(255, 255, 255, 0.2)",
  "guides.stack.color.dark": "rgba(255, 255, 255, 0.1)",
  "guides.normal.color.dark": "rgba(255, 255, 255, 0.05)",
  "guides.indent.showFirstIndentGuides": false,
  "editor.selectionHighlight": false,
  "editor.smoothScrolling": true,
  "editor.wrappingIndent": "indent",
  "editor.glyphMargin": false,
  "editor.lightbulb.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.detectIndentation": true,


  //
  // linters
  // --------------------------------------------------

  "javascript.validate.enable": false,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "twig.validate": false,
  "stylelint.enable": true,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },


  //
  // workbench and ui elements
  // --------------------------------------------------

  "workbench.colorTheme": "One Dark Pro",
  "workbench.statusBar.visible": true,
  "workbench.editor.openPositioning": "right",
  "workbench.editor.enablePreview": false,
  "workbench.tips.enabled": false,
  "markdown.preview.scrollEditorWithPreview": false,
  "workbench.list.horizontalScrolling": true,
  "workbench.editor.showIcons": true,


  //
  // file and folder excludes
  // --------------------------------------------------

  "files.exclude": {
    ".vscode/": true,
    ".github/": true,
    ".idea/": true,
    "build/": true,
    "gulpfile.js/": true,
    "node_modules/": true,
    "**/.nojekyll": true,
    "LICENSE": true,
    "package-lock.json": true,
    "yarn.lock": true,
    ".gitignore": true,
    ".gitmodules": true,
    ".stylelintignore": true,
    ".passwords.json": true,
    ".prettierrc.json": true,
    ".eslintrc.json": true,
    ".stylelintrc.json": true
  },

  "search.exclude": {
    "**/bower_components": true,
    "**/gulpfile.js": true,
    "**/private": true,
    "**/tmp": true,
    "**/lib": true,
    "**/img": true,
    "**/data": true,
    "**/vscode": false,
    "LICENSE": false,
    ".jpg": true,
    ".gitignore": false,
    ".gitmodules": false,
    ".stylelintignore": false,
    ".passwords.json": false,
    ".prettierrc.json": false,
    ".eslintrc.json": false,
    ".stylelintrc.json": false
  },


  //
  // plugins
  // --------------------------------------------------

  "zignd.html-css-class-completion": "**/*.{scss,html,twig,php}"
}